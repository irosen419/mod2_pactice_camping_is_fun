<h1>Activity Signup Form</h1>

<% if flash[:errors] %>
   <% flash[:errors].each do |error| %>
      <%= error %>
   <% end %>
<% end %>

<%= form_for(@signup) do |f| %>
    <%= f.collection_select :camper_id, Camper.all, :id, :name_plus_age %><br>

    <%= f.collection_select :activity_id, Activity.all, :id, :name %><br>

    <%= f.label :time %><br>
    <%= f.number_field :time %><br>

    <%= f.submit %><br>
<% end %>